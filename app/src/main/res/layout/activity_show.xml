<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baidu.wdyy.ShowActivity">
    <FrameLayout
        android:id="@+id/show_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <RadioGroup
        android:id="@+id/rg"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"

        android:orientation="horizontal">

        <RadioButton
            android:layout_weight="1"
            android:id="@+id/rb_movie"
            android:drawableTop="@drawable/radiomovie_select"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:layout_width="0dp"

            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb_cinema"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/radiocinema_select"
            android:button="@null"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/rb_user"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/radiouser_select"
            android:button="@null"
            android:gravity="center"
            />
    </RadioGroup>
</RelativeLayout>
