<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="20dp"
    android:background="@drawable/myborder"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/pl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cinema_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="中影I Do巨幕全景声厅" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pl1"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/cinema_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:40"
            android:textColor="#333333"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 一 "
            android:textColor="#666666"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/cinema_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19:26"
            android:textColor="#666666"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="end"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pl1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/pay_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginRight="6dp"
            android:text="￥" />

        <TextView
            android:id="@+id/cinema_mongey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/pay_y"
            android:text="53.9"
            android:textColor="#a20055"
            android:textSize="36sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/rest" />

</RelativeLayout>
