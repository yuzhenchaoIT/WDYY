<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginbag"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/member_activity_login_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_phone" />

                <EditText
                    android:id="@+id/ed_login_number"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:digits="0123456789"
                    android:ems="11"
                    android:hint="手机号"
                    android:imeOptions="actionNext"
                    android:paddingLeft="50dp"
                    android:textColor="#ffff"
                    android:textColorHint="#eeeeee" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff" />

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_lock" />

                <EditText
                    android:id="@+id/ed_login_password"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:ems="11"
                    android:hint="登录密码"
                    android:imeOptions="actionNext"
                    android:paddingLeft="50dp"
                    android:textColor="#ffff"
                    android:textColorHint="#eeeeee" />

                <ToggleButton
                    android:id="@+id/btn_ying"
                    android:layout_width="24dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_eye"
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/save_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记住密码"
                    android:textColor="#fff"
                    android:theme="@style/MyCheckBox" />

                <CheckBox
                    android:id="@+id/zd_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="自动登录"
                    android:textColor="#fff"
                    android:theme="@style/MyCheckBox" />

                <TextView
                    android:id="@+id/btn_regirect_tiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="快速注册"
                    android:textColor="#fff" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@id/member_activity_login_layout"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:background="@drawable/shape_bg_btn_log_reg"
            android:text="登录"
            android:textColor="#FFF"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第三方账号快速登录"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="#ffffff" />
        </LinearLayout>

        <ImageView
            android:id="@+id/weixin_login"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_weixin" />

    </LinearLayout>
</LinearLayout>