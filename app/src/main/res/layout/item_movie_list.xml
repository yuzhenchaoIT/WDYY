<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:id="@+id/ll_moive_list"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:clipChildren="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/yingpian"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sims"
                    android:layout_width="103dp"
                    android:layout_height="129dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    app:placeholderImage="@drawable/baobeier"
                    fresco:roundBottomLeft="true"
                    fresco:roundBottomRight="true"
                    fresco:roundTopLeft="true"
                    fresco:roundTopRight="true"
                    fresco:roundedCornerRadius="5dp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/sims"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="sdmiaohsd"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/titles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/sims"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:text="asodasdknsjakdbaskdnksjadnkjasndksjandsjakndjkasndkjasdkja"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/guan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/com_icon_collection_default_hdpi" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_moive_list"
        android:layout_marginTop="10dp"
        android:src="@drawable/group" />

</RelativeLayout>
