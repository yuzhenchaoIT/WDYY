<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginbag"
    android:orientation="vertical"
    tools:context="com.baidu.wdyy.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/member_activity_login_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/register_icon_name" />

                <EditText
                    android:id="@+id/ed_reg_nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@null"

                    android:ems="12"
                    android:hint="昵称"
                    android:paddingLeft="50dp"
                    android:textColor="#ffff"
                    android:textColorHint="#eeeeee" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#4Dffffff" />

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/register_icon_sex" />

                <EditText
                    android:id="@+id/ed_reg_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@null"

                    android:ems="12"
                    android:hint="性别"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="50dp"
                    android:textColor="#ffff"
                    android:textColorHint="#eeeeee" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#4Dffffff" />

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/register_icon_date" />

                <EditText
                    android:id="@+id/ed_reg_birth_date"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:ems="12"
                    android:focusable="false"
                    android:hint="出生日期"
                    android:imeOptions="actionNext"
                    android:inputType="date"
                    android:paddingLeft="50dp"
                    android:textColor="#ffff"
                    android:textColorHint="#eeeeee" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#4Dffffff" />


            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/register_icon_phone" />

                <EditText
                    android:id="@+id/ed_reg_phone"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:ems="12"
                    android:hint="手机号"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:paddingLeft="50dp"
                    android:textColor="#ffff"
                    android:textColorHint="#eeeeee" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#4Dffffff" />


            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/register_icon_mail" />

                <EditText
                    android:id="@+id/ed_reg_mail"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:ems="20"
                    android:hint="邮箱"
                    android:imeOptions="actionNext"
                    android:paddingLeft="50dp"
                    android:textColor="#ffff"
                    android:textColorHint="#eeeeee" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#4Dffffff" />

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/register_icon_lock" />

                <EditText
                    android:id="@+id/ed_reg_pwd"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:ems="12"
                    android:hint="注册密码"
                    android:imeOptions="actionNext"
                    android:inputType="numberPassword"
                    android:paddingLeft="50dp"
                    android:textColor="#ffff"
                    android:textColorHint="#eeeeee" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#4Dffffff" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@id/member_activity_login_layout"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:background="@drawable/shape_bg_btn_log_reg"
            android:text="注册"
            android:textColor="#FFF"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>