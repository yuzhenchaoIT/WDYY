<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingTop="10dp"
    tools:context="com.baidu.wdyy.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_action"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/ic_local_movies_black_24dp" />

        <TextView
            android:id="@+id/text_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/btn_action"
            android:text="电影详情"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/btn_heartxiangqing"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_margin="24dp"
            android:padding="5dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_xiangname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="name"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simp_xiangview"
            android:layout_width="260dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_xiangqing"
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_tuo"
                android:text="详情"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn_yugao"
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_tuo"
                android:text="预告"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn_photo"
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_tuo"
                android:text="剧照"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn_ping"
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_tuo"
                android:text="影评"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_fan"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ic_xiangqing_back"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn_gou"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_circle"
                android:text="购票"
                android:textColor="#ffffff" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
