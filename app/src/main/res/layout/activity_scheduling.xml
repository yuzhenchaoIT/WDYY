<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.baidu.wdyy.SchedulingActivity">

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="24dp">

        <TextView
            android:id="@+id/scheduling_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/scheduling_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scheduling_name"
            android:layout_marginTop="10dp"
            android:textColor="#666666"
            android:textSize="12sp" />

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/com_icon_navigation_default" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_below="@+id/one"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/scheduling_tu"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/moivebackgroundtwo" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/scheduling_sdv"
            android:layout_width="103dp"
            android:layout_height="130dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            app:roundedCornerRadius="4dp" />

        <TextView
            android:id="@+id/scheduling_textviewone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/scheduling_sdv"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/scheduling_textviewtwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scheduling_textviewone"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/scheduling_sdv"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/scheduling_textviewthree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scheduling_textviewtwo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/scheduling_sdv"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/scheduling_textviewfour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scheduling_textviewthree"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/scheduling_sdv"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/scheduling_textviewfive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scheduling_textviewfour"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/scheduling_sdv"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/scheduling_recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/two"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="20dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/scheduling_return"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/com_icon_my_default" />
    </RelativeLayout>

</RelativeLayout>
