<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="186dp"
                    android:background="@drawable/ic_location">

                </LinearLayout>

                <recycler.coverflow.RecyclerCoverFlow
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="223dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="85dp"
                    android:layout_marginRight="24dp"></recycler.coverflow.RecyclerCoverFlow>
            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_hotmovie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="热门电影"
                    android:textSize="15sp"
                    android:drawableRight="@drawable/ic_next"
                    android:padding="10dp"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_hotmovie"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
                <TextView
                    android:id="@+id/tv_nowplaying"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="正在热映"
                    android:textSize="15sp"
                    android:drawableRight="@drawable/ic_next"
                    android:padding="10dp"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_playingmovie"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
                <TextView
                    android:id="@+id/tv_sooning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="即将上映"
                    android:textSize="15sp"
                    android:drawableRight="@drawable/ic_next"
                    android:padding="10dp"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_sooning"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
        <LinearLayout
            android:id="@+id/ll_all2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_location2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="北京"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_margin="10dp"
                            android:drawableLeft="@drawable/ic_location"
                            />

                        <TextView
                            android:id="@+id/tv_search2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#ffee00"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:drawableLeft="@drawable/ic_search"
                            android:textSize="20sp" />
                    </RelativeLayout>
                    <TableLayout
                        android:background="#ededed"
                        android:id="@+id/list_tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TableLayout>
                        <android.support.v4.view.ViewPager
                            android:id="@+id/list_view_pager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
        </LinearLayout>

</LinearLayout>
